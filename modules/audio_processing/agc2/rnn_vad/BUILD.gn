import("../../../../webrtc.gni")

group("rnn_vad") {
  deps = [
    ":lib",
  ]
}

source_set("lib") {
  sources = [
    "common.h",
    "ring_buffer.h",
    "sequence_buffer.h",
  ]
  deps = [
    "../../../../api:array_view",
    "../../../../rtc_base:checks",
  ]
}

if (rtc_include_tests) {
  rtc_source_set("unittests") {
    testonly = true
    sources = [
      "ring_buffer_unittest.cc",
      "sequence_buffer_unittest.cc",
    ]
    deps = [
      ":lib",
      "../../../../api:array_view",
      "../../../../test:test_support",
    ]
  }

  rtc_executable("rnn_vad_tool") {
    testonly = true
    sources = [
      "rnn_vad_tool.cc",
    ]
    deps = [
      ":lib",
      "../../../../api:array_view",
      "../../../../common_audio:common_audio",
      "../../../../rtc_base:rtc_base_approved",
      "../../../../test:test_support",
    ]
  }
}
