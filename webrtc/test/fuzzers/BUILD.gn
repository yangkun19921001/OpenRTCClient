import("//build/config/features.gni")
import("//testing/test.gni")

static_library("webrtc_fuzzer_main") {
  sources = [
    "webrtc_fuzzer_main.cc",
  ]
  deps = [
    "../../system_wrappers:field_trial_default",
    "//testing/libfuzzer:libfuzzer_main",
  ]
