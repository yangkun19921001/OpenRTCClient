config("libunwindstack_config") {
  cflags = [
    "-I",
    rebase_path("src/libunwindstack/include", root_build_dir),
  ]
  # We don't need .dex file support.
  defines = [ "NO_LIBDEXFILE_SUPPORT" ]
}

config("warnings") {
  cflags = [
    "-Wno-c99-designator",
    "-Wno-shadow",
    "-Wno-unused-but-set-variable",
  ]
}

